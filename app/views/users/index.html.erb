<h1> Users </h1>
<body>
<% if @users.empty? %>
	<b>Site haven't users yet<b>

<% else %>

<table>
	<tr> 
		<th>User ID</th>
		<th>Login</th>
		<th>Password</th>
		<th>Email</th>
	</tr>
<% end %>

<% @users.each do |i| %>
	<tr>
		<td><%= i.id       %></td>
		<td><%= i.login    %></td>
		<td><%= i.password %></td>
		<td><%= i.email    %></td>
		<td><%= link_to "Edit user", edit_user_path(i) %></td>
		<td><%= link_to "Delite user", user_path(i), method: :delete, data: { confirm: "Delite user?" } %></td>
	</tr>
<% end %>
</table>

<middle>
	<p><%= link_to "Create new user", new_user_path(:user)%></p>
</middle>
</body>